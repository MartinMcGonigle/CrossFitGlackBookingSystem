@model Class
@{
    ViewData["Title"] = "Create Class";
}

<div class="row">
    <div class="col-md-12">
        <a asp-action="Index" class="btn btn-sm btn-secondary">Go Back</a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <section>
            <form asp-action="Create" method="post">
                <h4>Please enter class details</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="card mb-3 bg-light">
                    <div class="card-body">
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Title" class="form-control" />
                            <label asp-for="Title" class="form-label"></label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Description" class="form-control" />
                            <label asp-for="Description" class="form-label"></label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Date" class="form-control" aria-required="true" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <label asp-for="Date" class="form-label"></label>
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="DurationInMinutes" class="form-control" />
                            <label asp-for="DurationInMinutes" class="form-label"></label>
                            <span asp-validation-for="DurationInMinutes" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="MaxAttendees" class="form-control" />
                            <label asp-for="MaxAttendees" class="form-label"></label>
                            <span asp-validation-for="MaxAttendees" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="AvailableSpots" class="form-control" />
                            <label asp-for="AvailableSpots" class="form-label"></label>
                            <span asp-validation-for="AvailableSpots" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Location" class="form-control" />
                            <label asp-for="Location" class="form-label"></label>
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-lg btn-success">Save</button>
                </div>
            </form>
        </section>
    </div>
</div>