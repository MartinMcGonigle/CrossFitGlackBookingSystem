@model Workout
@{
    ViewData["Title"] = "Workouts";
    var date = (DateTime)ViewData["Date"];
}

<div class="container">
    <div class="row">
        <div class="col-md-2 text-start">
            <a asp-action="Index" asp-route-date="@date.Date.ToString("dd/MM/yyyy")" asp-route-offset="-1" class="btn btn-secondary">
                <i class="fas fa-chevron-left"></i>
            </a>
        </div>

        <div class="col-md-8 text-center">
            <h3>@date.ToString("dddd, MMMM dd")</h3>
        </div>

        <div class="col-md-2 text-end">
            <a asp-action="Index" asp-route-date="@date.Date.ToString("dd/MM/yyyy")" asp-route-offset="1" class="btn btn-secondary">
                <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </div>
    <hr />

    @if (Model != null)
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <a asp-action="Edit" asp-controller="Workout" asp-route-id="@Model.WorkoutId" class="btn btn-warning"><i class="fas fa-edit" aria-hidden="true"></i> Edit Workout</a>
                <a asp-action="Delete" asp-controller="Workout" asp-route-id="@Model.WorkoutId" class="btn btn-danger"><i class="far fa-trash-alt" aria-hidden="true"></i> Delete Workout</a>
            </div>
        </div>
        <br />

        <div class="row mt-4">
            <div class="col-md-12">
                @if (Model.Warmup != null)
                {
                    @Html.Raw(Model.Warmup.Description)
                }

                @if (Model.Strength != null)
                {
                    @Html.Raw(Model.Strength.Description)
                }

                @if (Model.WOD != null)
                {
                    @Html.Raw(Model.WOD.Description)
                }
            </div>
        </div>
    }
    else
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <a asp-action="Create" asp-controller="Workout" class="btn btn-primary"><i class="fas fa-circle-plus" aria-hidden="true"></i> Create Workout</a>
            </div>
        </div>
        <br />

        <div class="alert alert-info mt-4" role="alert">
            There are no workouts to display.
        </div>
    }
</div>