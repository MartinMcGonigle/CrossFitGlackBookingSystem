@model IEnumerable<MembershipType>
@{
    ViewData["Title"] = "View All Membership Types";
}

@if (Model.Any())
{
    <div class="card bg-light">
        <div class="card-body">
            <div role="search">
                <div class="row">
                    <div class="col-md-12 mb-2 mb-md-0">
                        <div class="input-group">
                            <input id="propert-details-search" class="form-control" type="text" placeholder="Search...">
                            <a asp-action="Create" class="btn btn-primary" type="button"><i class="fas fa-circle-plus" aria-hidden="true"></i> Create Membership Type</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-secondary">
                <tr>
                    <th>
                        Title
                    </th>

                    <th>
                        Price (£)
                    </th>

                    <th>
                        Description
                    </th>

                    <th>
                        Active
                    </th>

                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody id="propert-details-table">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.MembershipTypeTitle
                        </td>

                        <td>
                            £@string.Format("{0:N2}", item.MembershipTypePrice)
                        </td>

                        <td>
                            @{
                                var maxLength = 50;
                                var truncatedDescription = item.MembershipTypeDescription.Length > maxLength
                                ? item.MembershipTypeDescription.Substring(0, maxLength) + "..."
                                : item.MembershipTypeDescription;
                            }
                            <span title="@item.MembershipTypeDescription">@truncatedDescription</span>
                        </td>

                        <td>
                            @if (item.MembershipTypeActive)
                            {
                                <i class="fas fa-check text-success" title="Active"></i>
                            }
                            else
                            {
                                <i class="fas fa-times text-danger" title="Inactive"></i>
                            }
                        </td>

                        <td>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdown-@item.MembershipTypeId" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Actions
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdown-@item.MembershipTypeId">
                                    <a class="dropdown-item" asp-action="Edit" asp-route-membershipTypeId="@item.MembershipTypeId"><i class="fas fa-edit" aria-hidden="true"></i> Edit</a>
                                    @*<a class="dropdown-item" asp-action="Delete" asp-route-membershipTypeId="@item.MembershipTypeId" onclick="return confirm('Are you sure you want to delete this membership type?')"><i class="far fa-trash-alt" aria-hidden="true"></i> Delete</a>*@
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        No membership types available. Please try again after some time.
    </div>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#propert-details-search").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#propert-details-table tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}