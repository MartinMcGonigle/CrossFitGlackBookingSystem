@model MembershipType;

@{
    ViewData["Title"] = "Create Membership Type";
}

<div class="row">
    <div class="col-md-12">
        <a asp-action="Index" class="btn btn-sm btn-secondary">Go Back</a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <section>
            <form asp-action="Create" method="post">
                <h4>Please enter membership type details</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="card mb-3 bg-light">
                    <div class="card-body">
                        
                        <div class="mb-3">
                            <label asp-for="MembershipTypeTitle" class="control-label fw-bold required"></label>
                            <input asp-for="MembershipTypeTitle" class="form-control" />
                            <span asp-validation-for="MembershipTypeTitle" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MembershipTypePrice" class="control-label fw-bold required"></label>
                            <input asp-for="MembershipTypePrice" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="MembershipTypePrice" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MembershipTypeDescription" class="control-label fw-bold required"></label>
                            <textarea asp-for="MembershipTypeDescription" style="min-height: 300px" class="form-control" rows="4" cols="50"></textarea>
                            <span asp-validation-for="MembershipTypeDescription" class="text-danger"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="MembershipTypeActive" class="control-label fw-bold required"></label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="MembershipTypeActive" id="MembershipTypeActive1" />
                                <label class="form-check-label" for="MembershipTypeActive1">
                                    <b>Yes</b> - 
                                </label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="MembershipTypeActive" id="MembershipTypeActive2" />
                                <label class="form-check-label" for="MembershipTypeActive2">
                                    <b>No</b> -
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>