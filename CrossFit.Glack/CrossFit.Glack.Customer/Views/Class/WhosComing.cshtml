@model IEnumerable<ClassRegistration>
@{
    ViewData["Title"] = "Who’s Coming";
    var date = (DateTime)ViewData["Date"];
}

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h3>@date.ToString("dddd, MMMM dd")</h3>
        </div>
    </div>
    <hr />

    <div class="row mt-4">
        <div class="col-md-12">
            <a asp-action="Index" class="btn btn-sm btn-secondary"><i class="fas fa-chevron-left"></i> Go Back</a>
        </div>
    </div>
    <br />

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="card border bg-light px-2">
                                        <div class="row">
                                            <div class="col-md-12 text-center">
                                                @item.User.FirstName @item.User.LastName
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4" role="alert">
            No one has reserved a spot in this class yet.
        </div>
    }
</div>