@model IEnumerable<MembershipType>
@{
    ViewData["Title"] = "Memberships";
}

@if (Model.Any())
{
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <table class="table table-borderless">
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="card border border-dark bg-light px-2">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h5 class="modal-title">
                                                @item.MembershipTypeTitle - £@string.Format("{0:N2}", item.MembershipTypePrice)
                                            </h5>
                                        </div>

                                        <div class="col-md-6 text-end">
                                            <p class="card-text">
                                                <a class="text-info toggle-description" data-description-id="@item.MembershipTypeId"><i class="fas fa-eye"></i></a>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-body" id="description-@item.MembershipTypeId" style="display: none;">
                                    <p style="white-space:pre-wrap">@Html.Raw(item.MembershipTypeDescription)</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        No memberships available. Please try again after some time.
    </div>
}

@section scripts
    {
    <script src="~/js/_membershipType.js"></script>
}